{
  "name": "hope-church-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "//vue": "vue cli commands",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "//typescript": "typescript cli commands",
    "watch:ts-legacy": "tsc -w",
    "watch:ts": "babel ./client/ --out-dir  ./wwwroot/Scripts/ --extensions .ts,.tsx,.js,.jsx --watch",
    "build:ts-legacy": "tsc",
    "build:ts": "babel ./client/ --out-dir  ./wwwroot/Scripts/ --extensions .ts,.tsx,.js,.jsx"
  },
  "dependencies": {
    "core-js": "^3.8.3",
    "typescript": "^5.3.3",
    "vue": "^3.2.13",
    "vuetify": "^3.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@mdi/font": "^7.3.67",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "requireConfigFile": false
    },
    "rules": {
      "vue/multi-word-component-names": 0
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}